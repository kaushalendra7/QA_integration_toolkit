    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Behave current file",
            "type": "debugpy",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "env": {
                "BASE_DIR": "${workspaceFolder}"
            },
            "args": [
                "--logcapture",
                "--logging-level",
                "DEBUG",
                "--logging-format",
                "%(levelname)s %(asctime)s : %(message)s",
                "${file}"
            ]
        },
        
    ]
}